<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/btnClose"
                android:src="@drawable/ic_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kh_coffee_rewards"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:paddingStart="12dp" />
        </LinearLayout>

        <!-- Reward Progress -->
        <TextView
            android:text="REWARD PROGRESS"
            android:textSize="12sp"
            android:textColor="#888"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPoint"
                android:text="632"
                android:textSize="32sp"
                android:textColor="#222"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                android:contentDescription="Star Icon"/>
        </LinearLayout>

        <TextView
            android:text="Star Points"
            android:textSize="12sp"
            android:textColor="#AAA"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Progress Bar Custom -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Custom progress line -->
            <View
                android:id="@+id/progressLine"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_centerVertical="true"
                android:background="#C9A253"/>

            <!-- Milestone 100 -->
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/progressLine"
                android:text="100"
                android:textSize="12sp"
                android:textColor="#555"
                android:layout_marginTop="8dp"/>

            <!-- Milestone 250 -->
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_toRightOf="@id/progressLine"
                android:layout_alignParentStart="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@id/progressLine"
                android:layout_below="@id/progressLine"
                android:text="250"
                android:textSize="12sp"
                android:textColor="#555"
                android:layout_marginTop="8dp"/>

            <!-- Milestone 500 -->
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/progressLine"
                android:text="500"
                android:textSize="12sp"
                android:textColor="#555"
                android:layout_marginTop="8dp"/>
        </RelativeLayout>

        <!-- View History Button -->
    </LinearLayout>
</ScrollView>