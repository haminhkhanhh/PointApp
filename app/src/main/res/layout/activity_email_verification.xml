<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Banner/Image (bạn dùng ImageView hoặc ConstraintLayout để tạo bo góc trên, hoặc custom View) -->
    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:paddingTop="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logonospace" />

    <!-- Card trắng bo tròn -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_login_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:padding="32dp">

        <TextView
            android:id="@+id/tvStatus"
            android:text="Vui lòng kiểm tra email của bạn và xác thực!"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCheckVerification"
            android:text="Tôi đã xác thực email"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResendVerification"
            android:text="Gửi lại email xác thực"
            android:background="@color/main_color"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</LinearLayout>
